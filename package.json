{
  "name": "ngx-config",
  "version": "0.0.0",
  "description": "Configuration utility for Angular",
  "repository": {
    "type": "git",
    "url": "https://github.com/fulls1z3/ngx-config.git"
  },
  "keywords": [],
  "author": {
    "name": "Burak Tasci",
    "email": "me@fulls1z3.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fulls1z3/ngx-config/issues"
  },
  "homepage": "https://github.com/fulls1z3/ngx-config#readme",
  "scripts": {
    "clean": "gulp clean --color",
    "lint": "gulp tslint --color",
    "make": "gulp make --color",
    "test": "jest --runInBand --colors"
  },
  "devDependencies": {
    "@angular/common": "~2.4.0",
    "@angular/compiler": "~2.4.0",
    "@angular/core": "~2.4.0",
    "@angular/http": "~2.4.0",
    "@angular/platform-browser": "~2.4.0",
    "@angular/platform-browser-dynamic": "~2.4.0",
    "core-js": "^2.4.1",
    "rxjs": "^5.0.1",
    "zone.js": "^0.7.2",
    "lodash": "^4.17.4",
    "@types/node": "^8.0.25",
    "@types/jest": "^20.0.8",
    "@types/lodash": "4.14.55",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-load-plugins": "^1.5.0",
    "rimraf": "^2.6.1",
    "gulp-exec": "^2.1.3",
    "gulp-tslint": "^8.1.2",
    "webpack": "^3.5.5",
    "tslint-loader": "^3.5.3",
    "awesome-typescript-loader": "^3.2.3",
    "jest": "^20.0.4",
    "jest-preset-angular": "^2.0.5",
    "codelyzer": "^3.1.2",
    "tslint": "~5.7.0",
    "angular-tslint-rules": "^1.0.4",
    "typescript": "~2.1.6"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "./config/jest.setup.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "moduleNameMapper": {
      "^ngx-config/core$": "<rootDir>/packages/@ngx-config/core/index.ts",
      "^ngx-config/core/src/(.*)": "<rootDir>/packages/@ngx-config/core/$1",
      "(.*)": "<rootDir>/packages/$1"
    },
    "cache": false,
    "noStackTrace": true,
    "silent": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/@ngx-config/core/src/**.ts",
      "packages/@ngx-config/http-loader/src/**.ts",
      "packages/@ngx-config/merge-loader/src/**.ts"
    ]
  }
}
