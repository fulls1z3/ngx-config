{
  "name": "ngx-config",
  "version": "0.0.0",
  "description": "Configuration utility for Angular",
  "repository": {
    "type": "git",
    "url": "https://github.com/fulls1z3/ngx-config.git"
  },
  "keywords": [],
  "author": {
    "name": "Burak Tasci",
    "email": "me@fulls1z3.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fulls1z3/ngx-config/issues"
  },
  "homepage": "https://github.com/fulls1z3/ngx-config#readme",
  "scripts": {
    "clean": "rimraf .temp dist",
    "build": "ts-node ./tools/build/rollup.ts && rimraf .temp",
    "lint": "tslint -p ./tslint.json --force",
    "rebuild": "npm run clean && npm run build",
    "test": "jest --runInBand --colors",
    "test:ci": "jest --ci --updateSnapshot",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch"
  },
  "devDependencies": {
    "@angular/common": "~4.3.6",
    "@angular/compiler": "~4.3.6",
    "@angular/compiler-cli": "~4.3.6",
    "@angular/core": "~4.3.6",
    "@angular/http": "~4.3.6",
    "@angular/platform-browser": "~4.3.6",
    "@angular/platform-browser-dynamic": "~4.3.6",
    "core-js": "^2.4.1",
    "rxjs": "^5.0.1",
    "zone.js": "^0.8.17",
    "lodash": "^4.17.4",
    "@types/node": "^8.0.25",
    "@types/jest": "^20.0.8",
    "@types/lodash": "4.14.74",
    "rimraf": "^2.6.1",
    "ts-node": "^3.3.0",
    "glob": "^7.1.2",
    "camelcase": "^4.1.0",
    "rollup": "^0.49.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-commonjs": "^8.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-uglify": "^2.0.1",
    "jest": "^21.0.1",
    "jest-preset-angular": "^2.0.5",
    "jest-junit-reporter": "^1.1.0",
    "standard-version": "^4.2.0",
    "codelyzer": "^3.1.2",
    "tslint": "~5.7.0",
    "angular-tslint-rules": "^1.0.4",
    "typescript": "~2.5.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "./tools/test/jest.setup.ts",
    "testResultsProcessor": "./node_modules/jest-junit-reporter",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "moduleNameMapper": {
      "^ngx-config/core$": "<rootDir>/packages/@ngx-config/core/index.ts",
      "^ngx-config/core/src/(.*)": "<rootDir>/packages/@ngx-config/core/$1",
      "(.*)": "<rootDir>/packages/$1"
    },
    "cache": false,
    "noStackTrace": true,
    "silent": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/@ngx-config/core/src/**.ts",
      "packages/@ngx-config/http-loader/src/**.ts",
      "packages/@ngx-config/merge-loader/src/**.ts"
    ]
  }
}
